{
  "notion": {
    "api_key": "ntn_your_api_key_here",
    "api_version": "2022-06-28",
    "workspace_id": "your_workspace_id_optional"
  },
  "obsidian": {
    "root_dir": "/path/to/your/obsidian/notion",
    "organize_by_month": true,
    "file_naming": "title",
    "max_filename_length": 100
  },
  "sync": {
    "check_interval_minutes": 15,
    "quiet_hours_start": "00:00",
    "quiet_hours_end": "08:30",
    "enable_notifications": true,
    "notification_format": "mobile",
    "force_check_env_var": "FORCE_CHECK"
  },
  "export": {
    "include_metadata": true,
    "include_content": true,
    "include_images": false,
    "date_format": "%Y-%m-%d %H:%M:%S",
    "timezone": "Asia/Shanghai"
  },
  "logging": {
    "log_file": "sync_timer.log",
    "log_level": "INFO",
    "max_log_size_mb": 10,
    "backup_count": 5
  },
  "advanced": {
    "python_path": "python3",
    "use_python_checker": true,
    "fallback_to_shell": true,
    "auto_install_deps": true
  }
}